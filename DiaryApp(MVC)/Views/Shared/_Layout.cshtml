<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ежедневник</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <form method="post" class="form">
                    <label>Посмотреть заметки на день</label>
                    <input type="date" name="chosenDay" class="roundInput" />
                    <input type="hidden" name="dateFilter" value="true"/>
                    <input type="submit" value="Выбрать" class="btn" formaction="~/Notes/FilterNotesByDay" />
                </form>
                <form method="post" class="form">
                    <label>Посмотреть заметки на неделю</label>
                    <input type="week" name="chosenWeekStr" class="roundInput" />
                    <input type="submit" value="Выбрать" class="btn" formaction="~/Notes/FilterNotesByWeek" />
                </form>
                <form method="post" class="form">
                    <label>Посмотреть заметки на месяц</label>
                    <input type="month" name="chosenDate" class="roundInput" />
                    <input type="submit" value="Выбрать" class="btn" formaction="~/Notes/FilterNotesByMonth" />
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
