@model IEnumerable<DiaryApp_MVC_.Models.Note>
@{
    //ViewData["Title"] = "Test Page";
    //Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>Добавить заметку</title>
</head>
<body>
    <h3>Добавить заметку</h3>
    <div title="Добавить заметку" class="createNoteForm">
        <form class="form">
            <fieldset>
                <input type="hidden" name="Type" value="@ViewBag.ChosenNoteType">
                <input type="hidden" name="Active" value="true">
                <div class="meetingFields">
                    <div>
                        <label>Начало</label>
                        <input type="datetime-local" name="StartTime" class="roundInput" value=@DateTime.Now.ToString("s") required>
                    </div>
                    <div>
                        <label>Тема</label>
                        <input type="text" name="Theme" class="roundInput" required>
                    </div>
                </div>
                @if (ViewBag.NoteIsMeeting)
                {
                    <div class="memoFields">
                        <label>Место</label>
                        <input type="text" name="place" class="roundInput" value="" required>
                    </div>
                }
                @if (!ViewBag.NoteIsMemo)
                {
                    <div class="thingToDoFields">
                        <label>Конец</label>
                        <input type="datetime-local" name="EndTime" class="roundInput" value=@DateTime.Now.ToString("s") required>
                    </div>
                }
                @if (ViewBag.NoteIsMeeting)
                {<input type="submit" value="Добавить встречу" class="btn" formaction="~/Notes/AddMeeting">}
                @if (ViewBag.NoteIsMemo)
                {<input type="submit" value="Добавить напоминание" class="btn" formaction="~/Notes/AddMemo">}
                @if (ViewBag.NoteIsThingToDo)
                {<input type="submit" value="Добавить дело" class="btn" formaction="~/Notes/AddThingToDo">}
            </fieldset>
        </form>
    </div>
</body>
</html>